{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "declaration": true,
    "sourceMap": true,

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example"]
}
